{
  "name": "danea-monitor",
  "version": "1.0.2",
  "author": "Mirko Tordente <sviluppo@bssi.it>",
  "description": "Monitor per file con stampa automatica",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect=5858",
    "build-win": "electron-builder --win",
    "dist": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chokidar": "^3.5.3",
    "electron-updater": "^6.7.3",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.businessservicesrl.file-monitor",
    "publish": [
      {
        "provider": "github",
        "owner": "mirtor320",
        "repo": "Direct-Injection"
      }
    ],
    "productName": "Direct Injection",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}